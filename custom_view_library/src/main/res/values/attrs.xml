<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleButtonView">
        <attr name="minTime" format="integer" />
        <attr name="maxTime" format="integer" />
        <attr name="progressWidth" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="bigCircleColor" format="color" />
        <attr name="smallCircleColor" format="color" />
        <attr name="disableLongClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TitleIndicatorView">
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="indicatorBgColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="onColor" format="color"/>
        <attr name="offColor" format="color"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="enableTouch" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CodeView">
        <attr name="codeBackground" format="reference"/>
        <attr name="codeSize" format="dimension"/>
        <attr name="codeNumber" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CompositionAvatarView">
        <attr name="gap" format="dimension"/>
        <!-- 圆的多少分之一 -->
        <attr name="overlap" format="integer"/>
        <attr name="fitType" format="enum">
            <enum name="FIT" value="0"/>
            <enum name="CENTER" value="1"/>
            <enum name="START" value="2"/>
            <enum name="END" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="lightColor" format="color"/>
        <attr name="darkColor" format="color"/>
        <attr name="lineColor" format="color"/>
        <attr name="minTextSize" format="dimension"/>
        <attr name="maxTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AutoLineLayout">
        <attr name="maxLines" format="integer"/>
        <!--达到行上限后，最后展示不全的是否显示-->
        <attr name="limitIncompleteShow" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="CircularProgressView">
        <attr name="color" format="color"/>
        <attr name="alpha" format="float"/>
        <attr name="type">
            <!-- Defines an horizontal widget. -->
            <enum name="sector" value="0" />
            <!-- Defines a vertical widget. -->
            <enum name="receline" value="1" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="SquareImageView">
        <!-- Standard orientation constant. -->
        <attr name="orientation">
            <!-- Defines an horizontal widget. -->
            <enum name="horizontal" value="0" />
            <!-- Defines a vertical widget. -->
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ShadowContainer">
        <attr name="containerShadowColor" format="color"/>
        <attr name="containerShadowRadius" format="dimension"/>
        <attr name="containerDeltaLength" format="dimension"/>
        <attr name="containerCornerRadius" format="dimension"/>
        <attr name="deltaX" format="dimension"/>
        <attr name="deltaY" format="dimension"/>
        <attr name="enable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_shadowed" format="boolean"/>
        <attr name="sl_shadow_distance" format="dimension"/>
        <attr name="sl_shadow_angle" format="integer"/>
        <attr name="sl_shadow_radius" format="dimension"/>
        <attr name="sl_shadow_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="SelectableTextView">
        <attr name="textJustify" format="boolean"/>
        <attr name="forbiddenActionMenu" format="boolean"/>
        <attr name="textHeightColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <attr name="lineSpacingExtra" format="dimension"/>
        <attr name="charSpacingExtra" format="dimension"/>
        <attr name="textLeftToRight" format="boolean"/>
        <attr name="underLineText" format="boolean"/>
        <attr name="underLineWidth" format="float"/>
        <attr name="underLineColor" format="color"/>
        <attr name="underlineOffset" format="dimension"/>
        <attr name="textHeightLightColor" format="color"/>
        <attr name="showActionMenu" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LSVerticalTextView">
        <attr name="textColor" format="color|reference"/>
        <attr name="hintColor" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>
        <attr name="text" format="string|reference"/>
        <attr name="hint" format="string|reference"/>
        <attr name="lineSpace" format="dimension|reference"/>
        <attr name="wordSpace" format="dimension|reference"/>
        <attr name="gravity">
            <!-- 文字从左至右排版 -->
            <flag name="l2r" value="0" />
            <!-- 文字从右至左排版 -->
            <flag name="r2l" value="1" />
        </attr>
        <!-- 固定文字个数 -->
        <attr name="fixSize" format="integer"/>
        <!-- 字体 -->
        <attr name="typeface" format="string"/>
        <!-- 是否去掉字体自带的内边距 -->
        <attr name="includeFontPadding" format="boolean"/>
        <!-- 文字是否垂直显示 -->
        <attr name="vertical" format="boolean"/>
    </declare-styleable>
</resources>